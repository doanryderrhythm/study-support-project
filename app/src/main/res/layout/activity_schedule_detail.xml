<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_schedule_title"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="text"
                android:layout_marginBottom="16dp"
                android:hint="Enter schedule title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_schedule_description"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp"
                android:hint="Enter description" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_schedule_date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:hint="Select date (tap to open picker)"
                android:drawableEnd="@drawable/ic_calendar"
                android:drawablePadding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_schedule_start_time"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:hint="Select start time (tap to open picker)"
                android:drawableEnd="@drawable/ic_time"
                android:drawablePadding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Time"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_schedule_end_time"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:layout_marginBottom="24dp"
                android:hint="Select end time (tap to open picker)"
                android:drawableEnd="@drawable/ic_time"
                android:drawablePadding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/sp_schedule_type"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:entries="@array/schedule_types" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="end">

        <Button
            android:id="@+id/btn_schedule_cancel"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Cancel"
            android:background="@color/light_gray"
            android:textColor="#333333"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_schedule_save"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Save"
            android:background="@color/green_primary"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
