<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="20dp"
    tools:context=".NewAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo Tài Khoản Mới"
                android:textSize="28sp"
                android:textColor="#2C3E50"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điền thông tin bên dưới để bắt đầu"
                android:textSize="16sp"
                android:textColor="#7F8C8D"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Username Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/usernameEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:hint="Nhập tên đăng nhập"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:maxLines="1"
                android:fontFamily="sans-serif"
                android:textColor="#333333"
                android:textColorHint="#A0AEC0" />

        </RelativeLayout>

        <!-- Email Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:hint="Nhập địa chỉ email"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:fontFamily="sans-serif"
                android:textColor="#333333"
                android:textColorHint="#A0AEC0" />

        </RelativeLayout>

        <!-- New Password Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu mới"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/newPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="20dp"
                android:paddingEnd="60dp"
                android:hint="Nhập mật khẩu mới"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:maxLines="1"
                android:fontFamily="sans-serif"
                android:textColor="#333333"
                android:textColorHint="#A0AEC0" />

            <ImageView
                android:id="@+id/btnTogglePassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_visibility_off"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:contentDescription="Toggle password visibility" />

        </RelativeLayout>

        <!-- Re-enter Password Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu mới"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="40dp">

            <EditText
                android:id="@+id/reEnterPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="20dp"
                android:paddingEnd="60dp"
                android:hint="Nhập lại mật khẩu mới"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:maxLines="1"
                android:fontFamily="sans-serif"
                android:textColor="#333333"
                android:textColorHint="#A0AEC0" />

            <ImageView
                android:id="@+id/btnToggleConfirmPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_visibility_off"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:contentDescription="Toggle confirm password visibility" />

        </RelativeLayout>

        <!-- Full name Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/fullNameEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:hint="Nhập họ và tên"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:fontFamily="sans-serif"
                android:textColor="#333333"
                android:textColorHint="#A0AEC0" />

        </RelativeLayout>

        <!-- Phone number Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:hint="Nhập số điện thoại"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:inputType="phone"
                android:maxLines="1"
                android:fontFamily="sans-serif"
                android:textColor="#333333"
                android:textColorHint="#A0AEC0" />

        </RelativeLayout>

        <!-- Date of Birth Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/dobEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:hint="Nhập ngày sinh"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:maxLines="1"
                android:drawableEnd="@drawable/ic_calendar"
                android:fontFamily="sans-serif"
                android:textColor="#333333"
                android:textColorHint="#A0AEC0" />

        </RelativeLayout>

        <!-- Address Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ thường trú"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:hint="Nhập địa chỉ thường trú"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:fontFamily="sans-serif"
                android:textColor="#333333"
                android:textColorHint="#A0AEC0" />

        </RelativeLayout>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Đăng Ký"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_signup_bg"
            android:layout_marginBottom="25dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Already have account link -->
        <TextView
            android:id="@+id/textViewCreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Đã có tài khoản? Đăng nhập"
            android:textSize="16sp"
            android:textColor="#4A6FA5"
            android:padding="10dp"
            android:fontFamily="sans-serif" />


    </LinearLayout>

</ScrollView>